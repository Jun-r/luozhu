doctype
html
    head
        meta(charset="utf-8")
        title #{title}
        link(href="../dist/css/admin.css",rel="stylesheet")
    body
        div.J-login-box
            div.J-logo
                div.logo-bg#logo-bg
                    canvas#logo-canvas.logo-canvas(style="display:none")
                div.logo
