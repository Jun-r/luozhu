doctype
html
	head
		meta(charset="utf-8")
		title #{title}
		link(href="../dist/css/admin.css",rel="stylesheet")
	body.sub-body
		.pos-rlt.p-md
			span 首页
			em >
			span 轮播列表
		.p-md.m-top
			.panel.panel-default
				.panel-body
					.tab_t
						span.a.active 轮播列表
					a.btn.m-r10.btn-sm.btn-success(href="admin/bannerAdd") 添加轮播图
				table.table.table-striped
					thead
						tr
							th.t-c(width="18")
								.checkbox(style='margin:0')
									label.ui-checks
										input(type="checkbox")
										i
							th.t-c(width="100") 序号
							th.t-c(width="300") 图片
							th.t-c 文字
							th.t-c(width="400") 操作
					tbody
						if article == ''
							tr.ng-scope
								td(rowspan="1",colspan="5")
									.nolist 暂时找不到新闻
						each item,i in banner
							tr.ng-scope
								td.ng-binding
									.checkbox(style='margin: 0')
										label.ui-checks
											input(type="checkbox")
											i.ti-check
								td.ng-binding #{i+1}
								td.ng-binding.imgs <img src='../#{item.imgPath}' />
								td.ng-binding.t-l
									p 标题：#{item.title}
									p 详情：#{item.subject}
								td.ng-binding
									.operation
										a(href="bannerUpdate/#{item._id}") 修改
										em.mar
										a(href="bannerDelete/#{item._id}") 删除

				.table-page
					.pull-left
						.checkbox
							label.ui-checks
								input(type="checkbox")
								i
								em 全选
						button.btn.btn-sm.btn-danger 批量删除
					.pull-right.page-box
						.pagination-info 共有#{pagesize}条，每页显示20条
							| !{laypage}
						//.pagination-goto
						//	input#gotoPageNo.ipt.form-control(type="text")
						//	button#goBtn.btn.btn-sm.btn-default(type="button") GO
						//	input#totalCount(type="hidden",value="3")

		script(src="http://cdn.bootcss.com/jquery/2.2.0/jquery.min.js",type="text/javascript")
		script(src="../js/adminBase.js",type="text/javascript")
