doctype
html
	head
		meta(charset="utf-8")
		title #{title}
		link(href="../dist/css/admin.css",rel="stylesheet")
	body.sub-body
		.pos-rlt.p-md
			span 首页
			em >
			span 单页列表
		.p-md.m-top
			.panel.panel-default
				.panel-body
					.tab_t
						span.a.active 单页列表
					a.btn.m-r10.btn-sm.btn-success(href="/admin/pageList/add") 添加单页
				table.table.table-striped
					thead
						tr
							th.t-c(width="18")
								.checkbox(style='margin: 0')
									label.ui-checks
										input(type="checkbox",value="")
										i
							th.t-l(width="500") 单页名称
							th.t-c 页面介绍
							th.t-c 页面连接
							th.t-c(width="150") 操作
					tbody
						if pageList == ''
							tr.ng-scope
								td(rowspan="1",colspan="5")
									.nolist 暂时找不到单页
						each item in pageList
								tr.ng-scope
									td.ng-binding
										.checkbox(style='margin: 0')
										label.ui-checks
											input(type="checkbox",value="")
											i.ti-check
									td.ng-binding #{item.name}
									td.ng-binding.t-c #{item.remark}
									td.ng-binding.t-c #{item.url}
									td.ng-binding
										.operation
											a(href="/admin/pageList/edit/#{item._id}") 修改
											em.mar
											a(href="/admin/pageList/delete/#{item._id}") 删除
				.table-page
					.pull-left
						.checkbox
							label.ui-checks
								input(type="checkbox",value="")
								i
								em 全选
						button.btn.btn-sm.btn-danger 批量删除
					.pull-right.page-box
						.pagination-info 共有#{pagesize}条，每页显示20条
							| !{laypage}
						//.pagination-goto
						//	input#gotoPageNo.ipt.form-control(type="text")
						//	button#goBtn.btn.btn-sm.btn-default(type="button") GO
						//	input#totalCount(type="hidden",value="3")

		script(src="http://cdn.bootcss.com/jquery/2.2.0/jquery.min.js",type="text/javascript")
		script(src="../js/adminBase.js",type="text/javascript")