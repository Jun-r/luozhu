doctype
html
	head
		meta(charset="utf-8")
		title #{title}
		link(href="../dist/css/admin.css",rel="stylesheet")
	body.sub-body
		.pos-rlt.p-md
			span 首页
				em >
				span 导航列表
		.p-md.m-top
			.panel.panel-default
				.panel-body
					.tab_t
						span.a.active 导航列表
					.targetSearch
						button.btn.btn-info.btn-sm(type="button") 搜索
						input.form-control.ng-isolate-scope(type="text",placeholder="请输入文章名称")
				table.table.table-striped
					thead
						tr
							th.t-c(width="18")
								.checkbox(style='margin:0')
									label.ui-checks
										input(type="checkbox",value="")
										i
							th.t-l(width="350") 菜单名称
							th.t-c 排序
							th.t-c 链接
							th.t-c(width="150") 操作
					tbody
						if navigators == ''
							tr.ng-scope
								td(rowspan="1",colspan="5")
									.nolist 暂时找不到导航
						each item in navigators
							tr.ng-scope
								td.ng-binding
									.checkbox(style='margin:0')
										label.ui-checks
											input(type="checkbox",value="")
											i.ti-check
								td.ng-binding #{item.name}
								td.ng-binding.t-c #{item.sort}
								td.ng-binding.t-c #{item.url}
								td.ng-binding
									.operation
										a(href="/admin/navigatorUpdate/#{item._id}") 修改
										em.mar
										a(href="/admin/navigatorDelete/#{item._id}") 删除
				.table-page
					.pull-left
						.checkbox
							label.ui-checks
								input(type="checkbox",value="")
								i
								em 全选
						button.btn.btn-sm.btn-danger 批量删除
					//-.pull-right.page-box
						.pagination-info 共有3条，每页显示20条


		script(src="http://cdn.bootcss.com/jquery/2.2.0/jquery.min.js",type="text/javascript")
		script(src="/js/adminBase.js",type="text/javascript")
