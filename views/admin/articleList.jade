doctype
html
	head
		meta(charset="utf-8")
		title #{title}
		link(href="../dist/css/admin.css",rel="stylesheet")
	body.sub-body
		.pos-rlt.p-md
			span 首页
			em >
			span 文章列表
		.p-md.m-top
			.panel.panel-default
				.panel-body
					.tab_t
						span.a.active 文章列表
					.targetSearch
						button.btn.btn-info.btn-sm(type="button") 搜索
						input.form-control.ng-isolate-scope(type="text",placeholder="请输入文章名称")
					a.btn.m-r10.btn-sm.btn-success(href="/admin/articleAdd") 添加文章
				table.table.table-striped
					thead
						tr
							th.t-c(width="18")
								.checkbox(style='margin:0')
									label.ui-checks
										input(type="checkbox",value="")
										i
							th.t-l(width="500") 标题
							th.t-c 所属类别
							th.t-c 文章别名
							th.t-c 发表时间
							th.t-c(width="150") 操作
					tbody
						if article == ''
							tr.ng-scope
								td(rowspan="1",colspan="5")
									.nolist 暂时找不到文章
						each item in article
							tr.ng-scope
								td.ng-binding
									.checkbox(style='margin: 0')
										label.ui-checks
											input(type="checkbox",value="")
											i.ti-check
								td.ng-binding #{item.title}
								each obj in category
									if obj._id.toString() == item.categoryId.toString()
										td.ng-binding.t-c #{obj.CateName}
								td.ng-binding.t-c #{item.alias}
								td.ng-binding.t-c #{moment(item.publish).format('YYYY-MM-DD hh:mm:ss')}
								td.ng-binding
									.operation
										a(href="/admin/articleEdit/#{item._id}") 修改
										em.mar
										a(href="/admin/article/delete/#{item._id}") 删除

				.table-page
					.pull-left
						.checkbox
							label.ui-checks
								input(type="checkbox",value="")
								i
								em 全选
						button.btn.btn-sm.btn-danger 批量删除
					.pull-right.page-box
						.pagination-info 共有#{pagesize}条，每页显示20条
							| !{laypage}
						//.pagination-goto
						//	input#gotoPageNo.ipt.form-control(type="text")
						//	button#goBtn.btn.btn-sm.btn-default(type="button") GO
						//	input#totalCount(type="hidden",value="3")

		script(src="http://cdn.bootcss.com/jquery/2.2.0/jquery.min.js",type="text/javascript")
		script(src="../js/adminBase.js",type="text/javascript")
