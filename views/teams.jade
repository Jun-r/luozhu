								li
									a.img.defaultBg(href='cases?caseId=15')
										img.lazy(_src='dist/img/30.png')
								li
									a.img.defaultBg(href='cases?caseId=16')
										img.lazy(_src='dist/img/31.png')
								li
									a.img.defaultBg(href='cases?caseId=17')
										img.lazy(_src='dist/img/32.png')
				
			
			img.lazy.fullW.show(_src='dist/img/28.png')
			//底部
			include mixins/_footer.jade
			+footer(navigator, contact)
				
