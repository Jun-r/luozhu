				textarea#textarea.textarea
				a#submitBtn.show(href='javascript:;') 提交
				.ourInfo
					dl.invertop
						dt 销售服务
						dd 联系电话：010-6955 7550<br>E—mail：webservice@luozhu.net<br>联系人：曾女士<br>Email：zeng@luozhu.net
					dl.invertop
						dt 销售服务
						dd 联系人：李先生<br>E—mail：Email：lilei@luozhu.net<br>联系人：曾女士<br>Email：zeng@luozhu.net
			//底部
			include mixins/_footer.jade
			+footer(navigator)
				
		script(src='dist/js/zepto.min.js')
		script(src='dist/js/base.js')
		script.
			$(function(){
				var textarea=$('#textarea'), submitBtn=$('#submitBtn');
				submitBtn.on('click',function(){
					var text=textarea.val();
					if(text==''){
						index.toast('请输入您的需求、意见或建议后再提交！');
					}else{
						$.ajax({
							type:'post',
							url:'/suggest',
							data:{val:text},
							success:function(data){
								if(data.success){
									index.toast('提交成功！');
									textarea.val('');
								}else{
									index.toast('提交失败，请重试！');
								}
							},
							error:function(){
								index.toast('提交失败，请重试！');
							}
						})
					}
				});
			});