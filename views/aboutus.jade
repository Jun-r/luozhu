extends mixins/_layout

block content
	title 螺主
	body
		#circleG
			i#circleG_1
			i#circleG_2
			i#circleG_3
			
		#page.aboutus
			// 头部
			include mixins/_header.jade
			+header(navigator, 1)
			
			// 顶部图片
			section.commonTop.lazy(_src='dist/img/29.png')
				.warp.cfff
					i.logo
					h2 螺主，做您生活的建筑师～
					p.more LuoZhu, do you live the architect ~
			// 主要内容
			section.models
				.main_intro
					.bigShow.defaultBg
						img.lazy(_src='#{aboutCompany.imgPath[0]}')
					.intro_text.c000 #{aboutCompany.intro[0]}
				.main_intro
					.intro_text.c000 #{aboutCompany.intro[1]}
					.bigShow.defaultBg
						img.lazy(_src='#{aboutCompany.imgPath[1]}')
			
			section.models.watchword
				.img.defaultBg.invertop
					img.lazy(_src='#{watchword.imgPath}')
				.words.invertop.c000
					h2 #{watchword.title}
					p.signs #{watchword.signs}
			
			section.models.goals
				ul#ideas
					each item in goals
						li
							.detail
								i.icon.icon_1
								h3 #{item.title}
								p.more #{item.details}
			
			img.lazy.fullW.show(_src='dist/img/25.png')
			//底部
			include mixins/_footer.jade
			+footer(navigator, contact)
				
		script(src='dist/js/zepto.min.js')
		script(src='dist/js/base.js')