extends mixins/_layout

block content
	title 螺主
	body
		#circleG
			i#circleG_1
			i#circleG_2
			i#circleG_3
			
		#page.aboutus
			// 头部
			include mixins/_header.jade
			+header(navigator, 2)
			
			// 顶部图片
			section.commonTop.lazy(_src='dist/img/34.png')
				.warp.cfff
					i.logo
					h2 螺主，给你最舒适的生活体验～
					p.more LuoZhu, give you the most comfortable life experience ~
			// 主要内容
			section.models.casesTab.tabGroup
				ul#tabHead.tabHead
					each item,i in cases
						li(class='#{i==0?"on":""}')
							a(href='javascript:;') #{item.tabHead}
				#tabBody.tabBody
					each item,i in cases
						ul.models_ul.experience(class='#{i==0?"on":""}')
							each val in item.tabBody
								li.defaultBg(id='#{val.id}')
									p.title #{val.title}
									img.lazy(_src='#{val.imgPath}')
			
			.footImg
				img.lazy.fullW.show(_src='dist/img/35.png')
			//底部
			include mixins/_footer.jade
			+footer(navigator, contact)
			
			#caseShow.layer
				.layerMask
				.layerContent
					.slides
						i.prev.icon_bf
						.slides_wrap
							ul.slides_ul
						i.next.icon_bf
					.thumbnails
						.thumb_wrap
							ul.thumb_ul
							
